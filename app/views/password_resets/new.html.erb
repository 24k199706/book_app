<h1>パスワード再設定</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for :password_question, url: user_find_path do |f| %>
      <div class="mb-3">
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email ,class: "form-control" %>
      </div>
        <div class="mb-3">
        <%= f.label :"秘密の質問" %>
        <select name="password_question[select]" class="form-control" >
          <% Password_Question.all.each do |q| %>
          <option value="<%= q.id %>"><%= q.name %></option>
          <% end %>
        </select>
        </div>
        <div class="mb-3">
        <%= f.label :"秘密の質問の答え" %>
        <%= f.text_field :answer ,class: "form-control" %>
        </div>
        <%= f.submit "保存する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>